{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Static Library(Windows)",
            "type": "shell",
            "windows": {
                "command": "cmake -G \"Visual Studio 16\" -T v142 && cmake --build ."
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Static Library(UNIX)",
            "command": "cmake . && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
